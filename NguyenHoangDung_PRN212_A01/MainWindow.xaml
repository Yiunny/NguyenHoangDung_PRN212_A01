<Window x:Class="NguyenHoangDungWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:NguyenHoangDungWPF.Views"
        Title="Sales Management System" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Đây là Sidebar bên trái -->
        <TextBlock x:Name="WelcomeText"
           FontSize="16"
           Foreground="White"
           FontWeight="Bold"
           Margin="0 0 0 20"/>

        <StackPanel x:Name="Sidebar" Grid.Column="0" Background="#2D2D30" Margin="0">
            <TextBlock Text="Danh mục" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0 0 0 20"/>

            <!-- Dành cho nhân viên -->
            <StackPanel x:Name="EmployeeMenu">
                <Button Content="Khách hàng" Click="Navigate_Customer" Margin="0,0,0,10"/>
                <Button Content="Sản phẩm" Click="Navigate_Product" Margin="0,0,0,10"/>
                <Button Content="Đơn hàng" Click="Navigate_Order" Margin="0,0,0,10"/>
                <Button Content="Thống kê" Click="Navigate_Report" Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Dành cho khách hàng -->
            
            <StackPanel x:Name="CustomerMenu">
                <Button Content="Hồ sơ cá nhân" Click="Navigate_Profile" Margin="0,0,0,10"/>
            </StackPanel>

            <Button Content="Đăng xuất" Click="Logout_Click" Margin="0,20,0,0" Foreground="Red"/>
        </StackPanel>



        <!-- Content area -->
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
