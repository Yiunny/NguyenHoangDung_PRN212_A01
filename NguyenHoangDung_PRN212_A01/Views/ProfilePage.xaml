<Page x:Class="NguyenHoangDungWPF.Views.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:NguyenHoangDungWPF.ViewModels"
      Title="ProfilePage">

    <Page.DataContext>
        <vm:ProfileViewModel />
    </Page.DataContext>

    <StackPanel Margin="30">
        <TextBlock Text="Hồ sơ khách hàng" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Tên công ty: " Width="120"/>
            <TextBox Width="300" Text="{Binding Profile.CompanyName}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Người liên hệ: " Width="120"/>
            <TextBox Width="300" Text="{Binding Profile.ContactName}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Điện thoại: " Width="120"/>
            <TextBox Width="300" Text="{Binding Profile.Phone}" />
        </StackPanel>

        <Button Content="Cập nhật" Width="100" Margin="0,20,0,0" Click="Update_Click"/>
    </StackPanel>
</Page>

