<Page x:Class="NguyenHoangDungWPF.Views.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:NguyenHoangDungWPF.ViewModels"
      Title="ProductPage">

    <Page.DataContext>
        <vm:ProductViewModel />
    </Page.DataContext>

    <Grid Margin="20">
        <StackPanel>
            <Button Content="Tải sản phẩm" Command="{Binding LoadCommand}" Width="150" Margin="0,0,0,10"/>
            <DataGrid ItemsSource="{Binding Products}" AutoGenerateColumns="False" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" Width="50"/>
                    <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding ProductName}" Width="200"/>
                    <DataGridTextColumn Header="Giá" Binding="{Binding UnitPrice}" Width="100"/>
                    <DataGridTextColumn Header="Còn trong kho" Binding="{Binding UnitsInStock}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
