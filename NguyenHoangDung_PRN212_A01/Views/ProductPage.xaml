<Page x:Class="NguyenHoangDungWPF.Views.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:NguyenHoangDungWPF.ViewModels"
      Title="ProductPage">

    <Page.DataContext>
        <vm:ProductViewModel />
    </Page.DataContext>

    <Grid Margin="20">
        <StackPanel>
            <Button Content="Tải sản phẩm" Command="{Binding LoadCommand}" Width="150" Margin="0,0,0,10"/>
            <DataGrid x:Name="ProductGrid" ItemsSource="{Binding Products}" AutoGenerateColumns="False" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" Width="50"/>
                    <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding ProductName}" Width="200"/>
                    <DataGridTextColumn Header="Giá" Binding="{Binding UnitPrice}" Width="100"/>
                    <DataGridTextColumn Header="Còn trong kho" Binding="{Binding UnitsInStock}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" Margin="132,10,132,0">
                <Button Content="Thêm" Width="80" Command="{Binding AddCommand}" Margin="0,0,10,0" />
                <Button Content="Sửa" Width="80" Command="{Binding EditCommand}" CommandParameter="{Binding SelectedItem, ElementName=ProductGrid}" Margin="0,0,10,0" />
                <Button Content="Xoá" Width="85" Command="{Binding DeleteCommand}" CommandParameter="{Binding SelectedItem, ElementName=ProductGrid}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
