<Page x:Class="NguyenHoangDungWPF.Views.OrderReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:NguyenHoangDungWPF.ViewModels"
      Title="OrderReportPage">

    <Page.DataContext>
        <vm:OrderReportViewModel />
    </Page.DataContext>

    <StackPanel Margin="20">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Từ ngày:" Margin="0,0,10,0"/>
            <DatePicker SelectedDate="{Binding StartDate}"/>
            <TextBlock Text="Đến ngày:" Margin="20,0,10,0"/>
            <DatePicker SelectedDate="{Binding EndDate}"/>
            <Button Content="Thống kê" Margin="20,0,0,0" Command="{Binding ReportCommand}"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Orders}" AutoGenerateColumns="False" Height="200">
            <DataGrid.Columns>
                <DataGridTextColumn Header="OrderID" Binding="{Binding OrderID}" Width="80"/>
                <DataGridTextColumn Header="Ngày" Binding="{Binding OrderDate}" Width="120"/>
                <DataGridTextColumn Header="Khách hàng" Binding="{Binding Customer.CompanyName}" Width="200"/>
                <DataGridTextColumn Header="Nhân viên" Binding="{Binding Employee.Name}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Text="{Binding Summary}" FontWeight="Bold" Margin="0,10,0,0"/>
    </StackPanel>
</Page>
