<Page x:Class="NguyenHoangDungWPF.Views.CustomerOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:NguyenHoangDungWPF.ViewModels"
      Title="CustomerOrderPage">

    <Page.DataContext>
        <vm:CustomerOrderViewModel />
    </Page.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ComboBox danh mục -->
        <ComboBox ItemsSource="{Binding Categories}"
                  SelectedItem="{Binding SelectedCategory}"
                  DisplayMemberPath="CategoryName"
                  Width="300"
                  Margin="0,0,0,10"
                  Grid.Row="0"/>

        <!-- Danh sách sản phẩm -->
        <DataGrid ItemsSource="{Binding Products}"
                  SelectedItem="{Binding SelectedProduct}"
                  AutoGenerateColumns="False"
                  Height="200" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" Width="50"/>
                <DataGridTextColumn Header="Tên SP" Binding="{Binding ProductName}" Width="200"/>
                <DataGridTextColumn Header="Giá" Binding="{Binding UnitPrice}" Width="100"/>
                <DataGridTextColumn Header="Kho" Binding="{Binding UnitsInStock}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Nút thêm vào giỏ hàng -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Số lượng:" VerticalAlignment="Center" Margin="0,0,135,0"/>
            <TextBox Width="60" Text="{Binding QuantityToAdd}" />
            <Button Content="Thêm vào giỏ hàng" Command="{Binding AddToCartCommand}" Width="150" Margin="10,0,0,0"/>
        </StackPanel>



        <!-- Giỏ hàng -->
        <DataGrid ItemsSource="{Binding CartViewModel.Cart}"
                  AutoGenerateColumns="False"
                  Height="200" Grid.Row="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ProductID" Binding="{Binding Product.ProductID}" Width="80"/>
                <DataGridTextColumn Header="Tên SP" Binding="{Binding Product.ProductName}" Width="200"/>
                <DataGridTextColumn Header="UnitPrice" Binding="{Binding Product.UnitPrice}" Width="100"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Đặt hàng -->
        <Button Content="Đặt hàng"
                Command="{Binding CartViewModel.PlaceOrderCommand}"
                Grid.Row="4" Margin="0,10,0,0" Width="120" HorizontalAlignment="Right"/>
    </Grid>
</Page>
